{{>header}}
{{>navbar}}
</section>
<section class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-white py-4">Account</h2>
            </div>
        </div>
    </div>
</section>
</section>

<section class="account-sec bg-dark py-4">
    <div class="conatiner">
        <div class="row">
            <div class="col-4">
                <ul class="acc-tab">
                    <li class="border border-1 activmt-3emt-3" id="detail"><button onclick="user_details()" class="btn bg-none text-white text-start w-100 py-3 px-4">User Details</button></li>
                    <li class="border border-1 mt-3" id="order"><button onclick="user_orders()" class="btn bg-none text-white text-start w-100 py-3 px-4">Orders</button></li>
                    <li class="border border-1 mt-3" id="history"><button onclick="user_history()" class="btn bg-none text-white text-start w-100 py-3 px-4">History</button></li>
                    <li class="border border-1 mt-3" id="log_out"><button class="btn bg-none text-white text-start w-100 py-3 px-4" onclick="logout()">Logout</button></li>
                </ul>
            </div>
            <div class="col-8">
                <div id="user-details">
                    <div class="profile">
                        <img src="" alt="profile" class="rounded-circle border w-50 m-auto h-75">
                    </div>
                    <h6 class="text-light mt-3">Username: <span class="ms-5 text-secondary">{{current_user}}</span></h6>
                    <h6 class="text-light mt-3">Use Email: <span class="ms-5 text-secondary">{{c_user_email}}</span></h6>
                    <h6 class="text-light mt-3">Phone No. : <span class="ms-5 text-secondary">{{c_user_number}}</span></h6>
                    <h6 class="text-light mt-3">User ID. : <span class="ms-5 text-secondary">{{user_id}}</span></h6>
                </div>
                <div id="user-orders">
                    <h2>No orders yet..</h2>
                </div>
                <div id="user-history">
                    <h2>Available Soon</h2>
                </div>
            </div>
        </div>
    </div>
</section>




{{>footer}}